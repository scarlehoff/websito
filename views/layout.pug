doctype html
html
  head
    block title
    title= pagetitle ? pagetitle : title
    meta(name="active-menu", content=menuId)
    block extracss
    meta(name="viewport", content="width=device-width, initial-scale=1")
    // Custom stylesheet
    link(rel='stylesheet', href='/stylesheets/style.css')
