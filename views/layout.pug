            li.nav-item
              a.fab.fa-github.nav-link(href="https://github.com/scarlehoff/")
            li.nav-item
              a.fab.fa-twitter.nav-link(href="http://twitter.com/juacrumar")
            li.nav-item
              a.fab.fa-linkedin.nav-link(href="https://www.linkedin.com/in/juacrumar/")
          // Links for those w/o js enabled
          noscript
            ul.navbar-nav.ml-auto
              li.nav-item
                a.nav-link(href="https://github.com/scarlehoff/") github
              li.nav-item
                a.nav-link(href="http://twitter.com/juacrumar") twitter
              li.nav-item
                a.nav-link(href="https://www.linkedin.com/in/juacrumar/") linkedin

    div.container(style='margin-top: 3%;')
      block bodyHeadContainer
        div.jumbotron
          h2= headertitle ? headertitle : (pagetitle ? pagetitle : title)
          block bodyHead
    div.container
      block content
      hr
    block footer
      footer.container
        p(align='left')
        p(align="right") Juan M. Cruz-Martinez (#[a(href="mailto:juacrumar@lairen.eu") juacrumar@lairen.eu] - #[a(href="pgpjuacrumar.asc") key])
