                a.nav-link(href="./software") Software
            li.nav-item(class=(title=="Teaching" ? 'active' : ''))
                a.nav-link(href="./teaching") Teaching
            li.nav-item(class=(title=="Resume" ? 'active' : ''))
                a.nav-link(href="./resume") Resume 
            li.nav-item(class=(title=="Blog" ? 'active' : ''))
