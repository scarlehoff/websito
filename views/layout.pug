        div.collapse.navbar-collapse(id="navbarDiv")
          ul.navbar-nav.mr-auto
            li.nav-item(class=(title=="Research" ? 'active' : ''))
              a.nav-link(href='/research') Research
            li.nav-item(class=(title=="Software" ? 'active' : ''))
                a.nav-link(href="/software") Software
            li.nav-item(class=(title=="Teaching" ? 'active' : ''))
                a.nav-link(href="/teaching") Teaching
            li.nav-item(class=(title=="Resume" ? 'active' : ''))
                a.nav-link(href="/resume") Resume 
            li.nav-item(class=(title=="Foticos" ? 'active' : ''))
